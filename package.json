{
  "name": "lunasphere-website",
  "version": "1.0.0",
  "description": "LunaSphere - Professional Web Solutions and Digital Innovation",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss css/styles.css -o public/css/styles.min.css --use autoprefixer cssnano",
    "build:js": "terser js/*.js -o public/js/bundle.min.js --compress --mangle",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint server/ js/ --ext .js",
    "lint:fix": "eslint server/ js/ --ext .js --fix",
    "security": "npm audit && snyk test",
    "deploy": "npm run build && pm2 restart lunasphere",
    "setup": "npm install && npm run build && node scripts/setup.js",
    "backup": "node scripts/backup.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "logs": "pm2 logs lunasphere",
    "monitor": "pm2 monit",
    "stop": "pm2 stop lunasphere",
    "restart": "pm2 restart lunasphere",
    "status": "pm2 status"
  },
  "keywords": [
    "website",
    "web-development",
    "digital-agency",
    "responsive",
    "modern",
    "professional"
  ],
  "author": "LunaSphere Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "validator": "^13.11.0",
    "nodemailer": "^6.9.7",
    "express-validator": "^7.0.1",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.1.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "express-fileupload": "^1.4.3",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "async": "^3.2.5",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "terser": "^5.26.0",
    "snyk": "^1.1259.0",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lunasphere/website.git"
  },
  "bugs": {
    "url": "https://github.com/lunasphere/website/issues"
  },
  "homepage": "https://lunasphere.com",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/config/*.js",
      "!server/logs/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "server/"
    ],
    "ext": "js,json",
    "ignore": [
      "server/logs/",
      "node_modules/",
      "public/"
    ],
    "exec": "node server/app.js"
  }
}